.modal {
    margin: 15% 5%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 85%;
    overflow: hidden;
    z-index: 9999;
    background: #fff;
    border-radius: 10px;
}

.modal-title {
    padding-top: 25px;
    font-size: 14px;
    color: #000;
    font-weight: 650;
    text-align: center;
}

.modal-content {
    margin: 30px;
}

.modal-input {
    display: flex;
    background: #fff;
    font-size: 14px;
}

.input {
    text-align: center;
    width: 100%;
    font-size: 14px;
    box-sizing: border-box;
    color: grey;
}

input-holder {
    text-align: center;
    color: grey;
    font-size: 14px;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 60px;
    border-top: 1rpx solid #eee;
    font-size: 14px;
    line-height: 60px;
}

.btn-cancel {
    font-size: 14px;
    width: 50%;
    background-color: #fff;
    color: #000000;
    font-weight: 650;
    text-align: center;
    border-right: 1rpx solid #eee;
}

.btn-confirm {
    width: 50%;
    font-size: 14px;
    background-color: #fff;
    color: #576B95;
    font-weight: 650;
    text-align: center;
}