.about{
margin: 50px 40px;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
}
.logo{
width: 80px;
height:80px;
overflow: hidden;
margin-bottom: 20px;
}
.name{
font-size: 15px;
color: #333;
margin-bottom: 20px;
}
.content{
    font-size: 14px;
    color: grey;
    margin-bottom: 20px;
}
.fab{
    width: 100%;
    display: flex;
    justify-content: center;
}
.club{
    position: fixed;
    bottom: 70px;
    font-size: 16px;
    width: 40%;
    border: 1px solid #00B26A;
    background-color: #00B26A;
    color: #fff;
}